<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_navigation"
    app:startDestination="@id/screen_login">

    <fragment
        android:id="@+id/screen_login"
        android:name="com.abhijith.feature_auth.presentation.component.screen.LoginScreen"
        tools:layout="@layout/login_screen_layout">
        <action
            android:id="@+id/nav_login_to_sign_up_screen"
            app:destination="@id/screen_signup" />
    </fragment>

    <fragment
        android:id="@+id/screen_signup"
        android:name="com.abhijith.feature_auth.presentation.component.screen.SignUpScreen"
        tools:layout="@layout/signup_screen_layout">
        <action
            android:id="@+id/nav_sign_up_to_login_screen"
            app:destination="@id/screen_login" />
    </fragment>

</navigation>